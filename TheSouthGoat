local DrRayLibrary = loadstring(game:HttpGet("https://raw.githubusercontent.com/AZYsGithub/DrRay-UI-Library/main/DrRay.lua"))()
local window = DrRayLibrary:Load("TheSouthGoat", "Default")
local tab = window:newTab("Auto Grind", "ImageIdHere")

tab.newToggle("Auto Weight", "AUTO WEIGHT (Works for any tool or machine!!! [Except Punch)", true, function(toggleState)
    if toggleState then
        print("On")
    else
        print("Off")
    end
end)

tab.newToggle("Auto Lift", "Automatically perform lifting action.", false, function(state)
    local autoRepToggle = state
    if state then
        task.spawn(function()
            while autoRepToggle do
                game:GetService("Players").LocalPlayer:WaitForChild("muscleEvent"):FireServer("rep")
                task.wait(0.1)
            end
        end)
    end
end)

local DrRayLibrary = loadstring(game:HttpGet("https://raw.githubusercontent.com/AZYsGithub/DrRay-UI-Library/main/DrRay.lua"))()
local window = DrRayLibrary:Load("TheSouthGoat-PRIVATE", "Default")
local tab = window.newTab("Main", "ImageIdHere")  -- Fixed to correctly access the tab


-- Correcting the method to create a toggle for destroying the ad portal.
tab.newToggle("Destroy AD Portal", "This destroys the annoying ad portal", false, function(state)
    if state then
        print("Ad portal toggle ON")
        local part = workspace:FindFirstChild("RobloxForwardPortals")
        if part then
            part:Destroy()
            print("Ad portal destroyed.")
        else
            print("No ad portal found.")
        end
    else
        print("Ad portal toggle OFF")
    end
end)
